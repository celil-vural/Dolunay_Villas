@model RegionDtoForUpdate
<form method="post" asp-action="Update" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-center text-danger"></div>
    <div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedByUser" />
        <input type="hidden" asp-for="CreatedAt" />
        <input type="hidden" asp-for="ParentRegionID" />
    </div>

    <div class="form-group my-3">
        <label class="form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <partial name="_DefaultPartialHtmlForUpdateByBackButton" />
</form>