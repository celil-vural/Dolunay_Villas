@model HeatingOptionsDtoForInsertions
<div class="text-center">
    <div class="display-6">
        Create Heating Options
    </div>
</div>
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group mb-3">
        <label asp-for="Heating_Options_Title_Tr" class="form-label"></label>
        <input required asp-for="Heating_Options_Title_Tr" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Heating_Options_Title_En" class="form-label"></label>
        <input required asp-for="Heating_Options_Title_En" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <div class="btn-group">
            <button type="submit" class="btn btn-outline-secondary">
                <i class="fa fa-save"></i>
                Create
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fa fa-list"></i>
                Heating Options
            </a>
        </div>
    </div>
</form>