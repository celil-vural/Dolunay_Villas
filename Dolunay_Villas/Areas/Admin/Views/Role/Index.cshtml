@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
<div class="text-center my-1">
    <div class="display-6">
        Roles
    </div>
</div>
<table table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <div class="btn-group">
                        <a data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-sm btn-warning rounded-3" asp-route-id="@role.Name" asp-area="Admin" asp-controller="Role" asp-action="Update">
                            <i class="fa fa-edit"></i>
                        </a>
                        <form method ="post" asp-controller="Role" asp-action="DeleteRole">
                            <input  type="hidden" name="RoleName" value="@role.Name" />
                            <button data-toggle="tooltip" data-placement="top" title="Delete" type="submit" class="btn btn-sm btn-danger rounded-3">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="my-3 d-flex justify-content-end">
    <a class="btn btn-outline-secondary" asp-area="Admin" asp-controller="Role" asp-action="Create">Create</a>
</div>