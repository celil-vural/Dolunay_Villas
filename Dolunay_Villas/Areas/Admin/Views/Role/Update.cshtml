@model RoleEditDto
<div class="text-center my-5">
    <div class="display-6">
        Edit Role
    </div>
</div>
<div class="text-center text-danger" asp-validation-summary="All"></div>
<form method="post" asp-area="Admin"  asp-controller="Role" asp-action="Update">
    <div class="form-group">
        <label asp-for="RoleName">Role Name</label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <h4>Authorized Permissions</h4>
        <br />
        @foreach (var item in Model.Permissions)
        {
            <div class="form-check my-2">
                <input class="form-check-input" type="checkbox" asp-for="@Model.PermissionChecks[item]" />
                <label class="form-check-label">@item.ToString()</label>
            </div>
        }

    </div>
    <div class="btn-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-outline-secondary" asp-controller="Role" asp-action="Index">Back</a>
    </div>
</form>
